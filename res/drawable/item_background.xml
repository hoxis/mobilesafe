<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle"
    >
    <!-- 边框 -->
    <stroke
        android:width="1dip"
        android:color="#ff202020"
        />
    
    <!-- 指定边角 -->
    <corners 
        android:radius="2dip"
        />
    
    <!-- 指定固定颜色 -->
    <solid 
        android:color="@color/background"
        />
    
    <!-- 渐变色 -->
    <gradient />

</shape>
